// 左侧菜单字体大小统一
.sidebar-link {
  font-size: 14px !important;
}

// 激活状态样式
a.sidebar-link.active {
    font-weight: bold !important;
    background-color: #0075ff17;
}

// > 引用样式
blockquote {
    background-color: #0075ff15;
    border-left-color: #11a8cd;
    border-left-width: 4px;
    font-weight: 600;
    font-size: 14px;
    padding-top: 7px;
    padding-bottom: 7px;
}

// 斜体转红色粗体
em {
    font-style: normal;
    color: red;
    font-weight: bold;
}

// 关闭移动端菜单功能
.sidebar-sub-header {
  display: none;
}