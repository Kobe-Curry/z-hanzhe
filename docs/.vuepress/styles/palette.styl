// 左侧菜单之间外边距为0
.sidebar > .sidebar-links > li:not(:first-child) {
    margin-top: 0;
}

// 左侧菜单样式
.sidebar > .sidebar-links > li > a.sidebar-link, .sidebar-heading, .sidebar-group a.sidebar-link, .sidebar-group.is-sub-group > .sidebar-heading {
    font-size: 14px;
    line-height: unset;
    font-weight: unset;
    padding-top: 4px;
    padding-bottom: 4px;
}

